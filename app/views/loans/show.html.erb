<% content_for :title, @loan.name %>

<style>
  .picture { height: 300px; max-width:420px;}
  .detail_wrap{ margin-top;20px;}
  .detail_page{margin-top:20px;}
  .detail_gutter{margin-left: 24px;}
  .coop_img{margin-left: 70px;}
</style>

<script>
  $(function () {
    $('#calendar a:last').tab('show');
  })
</script>
<!--  initialize the slideshow when the DOM is ready -->
	<script>

$(function() {
  
  $('.carousel').carousel('pause');
    
});

</script>

	
	<!--  end slideshow script  -->

<div class="span12 container detail_page">
  <div class="row">
    <div class="span7">
      <div class="row">
        <div class="detail_wrap row">
          <h1 class="section-title"><%= @loan.name %></h1>
           
          <% if @pictures %>
            <% @pictures.each do |path| %>
            
              
              
<div id="carousel" class="carousel">

  <div class="carousel-inner">
                <div class="active item detail_gutter coop_img "><img class="img-polaroid picture" src="<%= path[:medium] %>" alt="<%= @loan.name %>"></div>
          
              <a class="carousel-control left" href="#carousel" data-slide="prev">&lsaquo;</a>
              <a class="carousel-control right" href="#carousel" data-slide="next">&rsaquo;</a>
    
              </div></div>
            <% end %>
          <% end %>

          <div class="description">
            <h3 class="section-title">About this Coop</h3>
            <p class="copy_front_low detail_gutter">
              <%= @loan.get_description || '<span style="font-style:italic;" class="notfound">No description found.</span>' %>
            </p>
          </div>
         
          <div class="lend">
            <a class="button lend_button btn pull-right" href="<%= url_for '#' %>">Lend</a><br/><br/>

          </div>
        </div>

      </div><!-- /.row -->
    </div><!-- /.span7 -->

    <div class="loan_calendar span5 detail_page">
      <div class="row pull-right">
        <ul class="nav nav-pills">
          <li><a href="#summary" data-toggle="tab">Update</a></li>
          <li><a href="#loanList" data-toggle="tab">Past Loans</a></li>
          <li><a href="#calendar" data-toggle="tab">Calendar</a></li>
        </ul>
        <div id="about_loan" class="tab-content">
          <div class="tab-pane active" id="summary">
           <div class="short_description">
            <p class="detail_gutter"><%= @loan.get_short_description %></p></div>
             </div>

          <div class="tab-pane" id="loanList">
            Other Loans to this Co-op
          </div>

          <div class="tab-pane" id="calendar">
            <h3 class="section-title">Calendar</h3>
            <ul class="calendar">
              <% @loan.project_events.each do |paso| %>
              <li class="paso active <%= paso.completed_or_not %>">
                <%= paso.date %>: <%= paso.summary %>
                <% if paso.Completed %>
                (Completed <%= paso.Completed %>)
                <% else %>
                (Not yet completed)
                <% end %>
                <% unless paso.Details.blank? %><br>Details: <%= paso.Details %><% end %>
                <ul>
                  <% paso.logs.each do |log| %>
                  <li class="log <%= log.Progress.parameterize.underscore %>">
                    Log <%= log.date %>: <%= log.explanation %>
                    <ul>
                      <li>Progress: <%= log.Progress %></li>
                      <% unless log.detailed_explanation.blank? %><li>Details: <%= log.detailed_explanation %></li><% end %>
                    </ul>
                  </li>
                  <% end %>
                </ul>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.span5 -->
  </div><!-- /.row -->
</div><!-- /.span12 -->

