<div class="embedded">
  <% if notice %>
    <p class="notice alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <i class="icon-ok"></i> <%= notice %>
    </p>
  <% end %>

  <% if alert %> 
    <p class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <i class="icon-info-sign"></i> <%= alert %>
    </p>
  <% end %>

  <%= yield %>
</div>
