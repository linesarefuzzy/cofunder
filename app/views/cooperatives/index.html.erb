<div class="container">
<h1 class="section_title">Listing cooperatives</h1>
<p class="btn pull-right"><%= link_to 'Add New Cooperative', new_cooperative_path %></p><br/>
<table class="table">
  <tr>
    <th>Name of Cooperative</th>
    <th></th>
    <th></th>
     <th></th>
  </tr>

<% @cooperatives.each do |cooperative| %>
  <tr>
    <td><%= cooperative.Name %></td>
    <td class="btn btn-link"><%= link_to 'Show', cooperative %></td>
    <td class="btn btn-link"><%= link_to 'Edit', edit_cooperative_path(cooperative) %></td>
    <td class="btn btn-link"><%= link_to 'Destroy', cooperative, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br/>
</div>
